<h1><%= @zoo.name %></h1>

<table>
    <tr>
        <th>Exhibit</th>
        <th>Species of Animal</th>
        <th>Quantity of Animal</th>
    </tr>
    <% @zoo.exhibits.each do |exhibit| %>
        <tr>
            <td><%= link_to exhibit.biome, exhibit %></td>
            <td><%= exhibit.animal.species %></td>
            <td><%= exhibit.quantity_of_animal %></td>
        </tr>
    <% end %>
</table><br>

<%= button_to "New Exhibit", new_exhibit_path, method: :get %>
<br>
<%= link_to "Go Back", zoos_path %>